{% extends 'base.html.twig' %}

{% block body %}
   {% include "header.html.twig" %}

       <div class="container py-5">
      <div class="mb-4 d-flex flex-row justify-content-between">
        <h1>Categorias</h1>
        <div>
          <a href="/categorias/cadastrar" class="btn btn-primary"><i class="bi bi-plus"></i>Nova categoria</a>
        </div>
      </div>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col-1 text-align-right">Actions</th>
          </tr>
        </thead>
        <tbody>
            {% for valor in categorias %}
                <tr>
                <th scope='row'>{{ valor.id }}</th>
                    <td>{{ valor.nome }}</td>
                    <td class='col-1 text-align-right'>
                            <a href="{{ path('categoria_editar', {id: valor.id}) }}" class='btn btn-secondary btn-sm'><i class='bi bi-pencil'></i></a>
                            <a href="{{ path('categoria_excluir', {id: valor.id}) }}" class='btn btn-danger btn-sm'><i class='bi bi-x'></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
    </div>
  </main>

 
{% endblock %}